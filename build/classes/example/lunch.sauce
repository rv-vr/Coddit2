grab Wrap lunch_item = "Burrito"
grab Chunk spiciness = 0
grab Slurp water_left = 0.2
grab Taste mouth_burning = Yum

chew (spiciness > 5) {
    
    chew (water_left < 0.5) {
        grab Wrap reaction = "Need a refill!"
        burp(reaction)
    }
    spit {
        water_left = water_left - 0.1
        burp("Cooling down...")
    }

} 
nibble (spiciness == 0) {
    grab Wrap reaction = "This is bland."
    burp(reaction)

} 
spit {
    lunch_item = "Finished"
    mouth_burning = Yuck
}